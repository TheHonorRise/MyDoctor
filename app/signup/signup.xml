<Page loaded="onNavigatingTo" class="page" actionBarHidden="true" xmlns="http://www.nativescript.org/tns.xsd">

    <ScrollView orientation="vertical">

        <StackLayout class="page">
            <StackLayout class="form">

                <Label class="header centered h2" text="MySignals" color="firebrick" />
                <StackLayout class="input-field">
                    <TextField text="{{ textFieldValue }}" hint="Nom" />

                </StackLayout>

                <StackLayout class="input-field">
                    <TextField text="{{ textFieldValue }}" hint="Prenom" />
                </StackLayout>

                <StackLayout class="input-field">
                    <TextField id="hamid" hint="Email" />
                </StackLayout>

                <StackLayout class="input-field">
                    <TextField id="password" text="{{ password }}" hint="Mot de passe"
                        secure="true" />
                </StackLayout>
                <StackLayout class="input-field">
                    <TextField id="repassword" text="{{ repassword }}" hint="Répéter mot de passe"
                        secure="true" />
                </StackLayout>

                <StackLayout class="input-field">
                    <TextField text="{{ textFieldValue }}" hint="Adresse" />
                </StackLayout>

                <StackLayout class="input-field">
                    <TextField text="{{ textFieldValue }}" hint="Téléphone" />
                </StackLayout>


                <StackLayout class="input-field">
                    <Label class="title" text="Date de naissance" textWrap="true"
                        marginBottom="-8"></Label>
                    <DatePicker year="{{ currentYear }}" month="{{ currentMonth }}"
                        day="{{ currentDay}}" minDate="1970-01-01" maxDate="2100-12-31" />
                </StackLayout>



                <Button text="sign up" tap="{{ submit }}" class="btn btn-danger m-t-20" />
                <Label text="{{ error }}" class="login-label" />


                <Label class="login-label sign-up-label centered" tap="{{}}">
                    <FormattedString>
                        <Span text="You have an account ? " />
                        <Span text="Log in" class="bold" />
                    </FormattedString>
                </Label>

            </StackLayout>
        </StackLayout>
    </ScrollView>
</Page>